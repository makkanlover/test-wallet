{
  "name": "web3-wallet-system",
  "version": "1.0.0",
  "description": "Web3ウォレット管理・操作アプリ",
  "type": "commonjs",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "preview": "npx vite preview",
    "start": "npm run build && node server.js",
    "server": "node server.js",
    "restart": "pkill -f 'node server.js' || true && sleep 1 && node server.js",
    "app": "npx vite",
    "lint": "npx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "npx tsc --noEmit",
    "test": "npx vitest run --reporter=verbose",
    "test:unit": "npx vitest run tests/unit --reporter=verbose",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "test:ui": "npx vitest --ui"
  },
  "dependencies": {
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
    "@openzeppelin/contracts": "^5.3.0",
    "@reduxjs/toolkit": "^2.0.1",
    "@walletconnect/client": "^1.8.0",
    "@walletconnect/web3-provider": "^1.8.0",
    "axios": "^1.6.2",
    "dotenv": "^17.2.0",
    "ethers": "^6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-redux": "^9.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@emotion/babel-plugin": "^11.13.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.54.1",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^3.2.4",
    "babel-jest": "^30.0.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "hardhat": "^2.19.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
