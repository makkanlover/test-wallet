{
  "name": "web3-wallet-system",
  "version": "1.0.0",
  "description": "Web3ウォレット管理・操作アプリ",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && node server.js",
    "server": "node server.js",
    "restart:linux": "pkill -f 'node server.js' || true && sleep 1 && node server.js",
    "restart:windows": "taskkill /F /IM node.exe 2>nul || exit 0 && timeout /t 1 >nul && node server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --reporter=verbose",
    "test:unit": "vitest run tests/unit --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/SimpleERC20.ts --network sepolia",
    "clean": "rm -rf dist artifacts cache ignition/deployments/erc20-* ignition/parameters/erc20-*.json",
    "clean:windows": "if exist dist rmdir /s /q dist && if exist artifacts rmdir /s /q artifacts && if exist cache rmdir /s /q cache",
    "setup": "npm install && npm run compile",
    "postinstall": "npm run compile"
  },
  "dependencies": {
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
    "@openzeppelin/contracts": "^5.3.0",
    "@reduxjs/toolkit": "^2.0.1",
    "dotenv": "^17.2.0",
    "ethers": "^6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-redux": "^9.0.4"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "hardhat": "^2.19.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
