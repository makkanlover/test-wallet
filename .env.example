# Web3ウォレットアプリ環境変数テンプレート

# プライベートキー（0xプレフィックスなしの64文字のHex文字列）
PRIVATE_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
VITE_PRIVATE_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# RPCエンドポイント（テストネット用）
# Ethereum Sepolia Testnet
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Polygon Amoy Testnet
POLYGON_RPC_URL=https://amoy.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_POLYGON_RPC_URL=https://amoy.infura.io/v3/YOUR_INFURA_PROJECT_ID

# WalletConnect Project ID（外部ウォレット連携用）
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# デフォルトネットワーク（sepolia, amoy）
DEFAULT_NETWORK=sepolia
VITE_DEFAULT_NETWORK=sepolia

# アプリケーション設定
APP_NAME=Web3ウォレットシステム
APP_VERSION=1.0.0